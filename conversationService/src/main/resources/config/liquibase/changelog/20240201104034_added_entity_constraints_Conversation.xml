<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Conversation.
    -->
    <changeSet id="20240201104034-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="provider_id"
                                 baseTableName="conversation"
                                 constraintName="fk_conversation__provider_id"
                                 referencedColumnNames="id"
                                 referencedTableName="provider"
                                 />

        <addForeignKeyConstraint baseColumnNames="message_id"
                                 baseTableName="conversation"
                                 constraintName="fk_conversation__message_id"
                                 referencedColumnNames="id"
                                 referencedTableName="message"
                                 />
    </changeSet>
</databaseChangeLog>
